<p id="notice"><%= notice %></p>


<% form_tag "/reservation/find" do %>
 <%= text_field_tag :search_string %>
 <%= submit_tag :search %>
<% end %>



<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Retailer Name</th>
      <th>Product</th>
      <th>Product ID</th>

      <th>Quantity</th>
	    <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.name %></td>
        <td><%= reservation.product %></td>
        <td><%= reservation.product_id %></td>
		
        <td><%= reservation.quantity %></td>
		      <td><%= reservation.status %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

